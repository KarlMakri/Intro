{% extends 'base.html.twig' %}

{% block title %} liste des couleurs {% endblock %}

{% block body %}
<h1>Liste des couleurs</h1>

<div id="modal">
  <div>T'es sûr de vouloir faire ça ?</div>
  <div>
    <button>Oui</button>
    <button>Non</button>
  </div>
</div>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Nom en anglais</th>
      <th>Nom en français</th>
      <th>Valeur hexadécimale</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    {% for color in colors %}
    <tr>
      <td>{{ color.nameEn }}</td>
      <td>{{ color.nameFr }}</td>
      <td>{{ color.hexa }}</td>
      <td>
        <a href="/color/{{color.id}}/edit" class="btn btn-sm btn-primary">Modifier</a>&nbsp;&nbsp;
        <a href="/color/{{color.id}}/delete" class="btn btn-sm btn-danger">Supprimer</a>
      </td>
    </tr>
    {% endfor %}
  </tbody>
</table>
{% endblock %}

{% block js %}
<script src="/js/app.js"></script>
{% endblock %}
