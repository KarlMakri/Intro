{% extends 'base.html.twig' %}

{% block body %}

 <a class="btn btn-primary"
  href="{{path('proverb_add')}}">Ajouter un proverbe</a>

  <table class="table table-striped table-bordered">
    <thead>
      <tr>
        <th>Texte</th>
        <th>Pays</th>
        <th>Thèmes</th>
        <th>Popularité</th>
      </tr>
    </thead>
    <tbody>
      {% for proverb in proverbs %}
        <tr>
          <td>{{proverb.body}}</td>
          <td>{{proverb.country.name}}</td>
          <td>
            {% for topic in proverb.topic %}
              {{topic.name}},
            {% endfor %}
          </td>
          <td>{{proverb.popularity}}</td>
        </tr>
      {% endfor %}
    </tbody>
  </table>

{% endblock %}
