{% extends 'base.html.twig' %}

{% block body %}

<a class="btn btn-primary"
  href="/country/add">Ajouter un pays</a>

<table class="table table-striped table-bordered">
  {% for country in countries %}
    <tr>
      <td>{{ country.name }}</td>
      <td>
        <a href="{{path('country_delete', {'id':country.id})}}">supprimer</a>
      </td>
    </tr>
  {% endfor %}
</table>

{% endblock %}
